<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginEnd="2dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/formula_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_text_view_bottom"
            android:text=""
            android:textSize="@dimen/text_view_text_size" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/left_bracket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="("
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/right_bracket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text=")"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/erase_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="&lt;-"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/clear_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="C"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="1"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="2"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="3"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="/"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="4"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="5"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="6"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="*"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="7"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="8"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="9"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="+"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/exponentiate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="^"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="0"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="."
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>

                <Button
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/elements_in_row"
                    android:text="-"
                    android:textSize="@dimen/button_text_size"
                    android:onClick="onClickBtn"/>
            </TableRow>

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/elements_in_row"
                android:text="="
                android:textSize="@dimen/button_text_size"
                android:onClick="onClickBtn"/>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>